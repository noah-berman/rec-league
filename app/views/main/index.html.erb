<h2>Welcome to rec league</h2> <br>
 <h4>Please sign in below: </h4>

<!-- Sign in form below  -->
<%= form_with(model: @player, local: false) do |form| %>
  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to "Register New User", new_player_path %>
